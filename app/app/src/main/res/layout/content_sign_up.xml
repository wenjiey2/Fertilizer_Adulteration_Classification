<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/user_profile"
    tools:showIn="@layout/activity_sign_up">

    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="111dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/ic_account_box"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="39dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New User Sign Up"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:layout_editor_absoluteX="168dp"
            tools:layout_editor_absoluteY="200dp"
            tools:padding="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:padding="10dp"
                android:text="+" />

            <Spinner
                android:id="@+id/spinnerCountries"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:padding="10dp"
                android:text="@string/phone_number"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="220dp" />

            <EditText
                android:id="@+id/user_phone_number_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="phone"
                android:padding="10dp"
                tools:layout_editor_absoluteX="120dp"
                tools:layout_editor_absoluteY="220dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/enter_email_text"
                android:layout_width="143dp"
                android:layout_height="46dp"
                android:text="Email:" />

            <EditText
                android:id="@+id/user_email_input"
                android:layout_width="232dp"
                android:layout_height="61dp"
                android:ems="10"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="384dp"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/enter_pw_text_su"
                android:layout_width="143dp"
                android:layout_height="46dp"
                android:text="Set Password:" />

            <EditText
                android:id="@+id/user_pw_input_su"
                android:layout_width="232dp"
                android:layout_height="61dp"
                android:ems="10"
                android:inputType="textEmailAddress" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="108dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:text="@string/user_occupation"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="431dp" />

            <Spinner
                android:id="@+id/user_occupations_spinner"
                android:layout_width="218dp"
                android:layout_height="41dp"
                android:padding="10dp"
                tools:layout_editor_absoluteX="177dp"
                tools:layout_editor_absoluteY="431dp" />
        </LinearLayout>

        <Button
            android:id="@+id/profile_submit_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sign Up With Phone #"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="511dp" />

        <Button
            android:id="@+id/profile_submit_button_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Sign Up With Email"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="511dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>